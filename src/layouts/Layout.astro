---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'Dejan Vasic - Software Engineer' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<title>{title}</title>
	</head>
	<body>
		<header class="site-header">
			<div class="header-container">
				<nav class="main-nav">
					<a href="/">Home</a>
					<a href="/cv">CV</a>
					<a href="/projects">Projects</a>
					<a href="/blog">Blog</a>
				</nav>
			</div>
		</header>

		<slot />

		<footer class="site-footer">
			<div class="footer-container">
				<p>&copy; {new Date().getFullYear()} Dejan Vasic. All rights reserved.</p>
				<div class="social-links">
					<a href="https://github.com/" target="_blank" rel="noopener noreferrer">GitHub</a>
					<a href="https://linkedin.com/in/" target="_blank" rel="noopener noreferrer">LinkedIn</a>
					<a href="https://twitter.com/" target="_blank" rel="noopener noreferrer">Twitter</a>
				</div>
			</div>
		</footer>
	</body>
</html>

<!-- All styles are now in global.css -->
