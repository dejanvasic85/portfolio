---
import Layout from './Layout.astro';
import Tags from '../components/Tags.astro';

const { frontmatter } = Astro.props;
---

<Layout
	title={frontmatter.title}
	description={frontmatter.excerpt ||
		`Blog post by Dejan Vasic about ${frontmatter.tags?.join(', ') || 'web development'}`}
	type="article"
>
	<article class="blog-post">
		<main class="container">
			<header>
				<div class="post-meta">
					<span class="post-date">{frontmatter.date}</span>
					{
						frontmatter.tags && (
							<div class="tag-container">
								<Tags tags={frontmatter.tags.map((t: string) => t)} />
							</div>
						)
					}
				</div>
				<h1>{frontmatter.title}</h1>
				<p class="author">By Dejan Vasic</p>
				{frontmatter.excerpt && <p class="excerpt">{frontmatter.excerpt}</p>}
			</header>

			<div class="content">
				<slot />
			</div>

			<div class="post-footer">
				<a href="/blog" class="btn-link">‚Üê Back to All Posts</a>
			</div>
		</main>
	</article>
</Layout>

<style>
	header {
		margin-bottom: 3rem;
	}

	.post-meta {
		margin-bottom: 1rem;
	}

	.post-date {
		color: var(--color-text-light);
	}

	.tag-container {
		margin-top: 1rem;
	}

	.author {
		color: var(--color-text-light);
		font-size: 1rem;
		margin: 0.5rem 0 1rem;
		font-style: italic;
	}

	.excerpt {
		font-size: 1.2rem;
		color: var(--color-text-light);
		line-height: 1.6;
		font-weight: 400;
	}

	.content {
		font-size: 1.1rem;
		line-height: 1.7;
		color: var(--color-text);
	}

	.content h2 {
		font-size: 1.8rem;
		margin: 2rem 0 1rem;
	}

	.content h3 {
		font-size: 1.4rem;
		margin: 1.5rem 0 1rem;
	}

	.content p {
		margin-bottom: 1.5rem;
	}

	.content img {
		border-radius: 0.5rem;
		margin: 2rem 0;
	}

	.post-footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid var(--color-border);
	}
</style>
