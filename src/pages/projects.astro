---
import Layout from '../layouts/Layout.astro';
import Tags from '../components/Tags.astro';
---

<Layout title="Projects - Dejan Vasic">
	<main class="container">
		<h1>Projects</h1>
		<div class="projects-grid">
			<!-- Project 1 -->
			<div class="project-card">
				<div class="project-content">
					<h2>My Notes</h2>
					<p class="description">
						My personal project that allows my family and I to share notes and reminders.
						Previously, we used Google Keep, but I wanted to create something more tailored to our
						needs and privacy.
					</p>
					<Tags tags={['Svelte', 'SvelteKit', 'Postgres', 'Prisma', 'Tailwind', 'Vercel']} />
					<div class="links">
						<a href="https://notes.vasic.com.au" target="_blank" rel="noopener noreferrer"
							>View My Notes</a
						>
						<a
							href="https://github.com/dejanvasic85/notes"
							target="_blank"
							rel="noopener noreferrer">Source Code</a
						>
					</div>
				</div>
			</div>
		</div>

		<a href="/" class="back-link">‚Üê Back to Home</a>
	</main>
</Layout>

<style>
	.projects-grid {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		margin-bottom: 2rem;
	}

	.project-card {
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: var(--shadow-card);
		transition:
			transform 0.3s,
			box-shadow 0.3s;
	}

	.project-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-card-hover);
	}

	.project-content {
		padding: 1.5rem;
	}

	.project-card h2 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: #333;
	}

	.description {
		color: #555;
		margin-bottom: 1rem;
		line-height: 1.5;
	}

	.links {
		display: flex;
		gap: 1rem;
	}

	.links a {
		color: var(--color-primary);
		text-decoration: none;
	}

	.links a:hover {
		text-decoration: underline;
	}
</style>
