---
import Tags from './Tags.astro';

interface Props {
	title: string;
	description: string;
	tags: string[];
	projectUrl?: string;
	sourceCodeUrl?: string;
	imageUrl?: string;
}

const { title, description, projectUrl, sourceCodeUrl, tags, imageUrl } = Astro.props;
---

<div class="project-card">
	{imageUrl && (
		<div class="project-image">
			<img src={imageUrl} alt={title} />
		</div>
	)}
	<div class="project-content">
		<h2>{title}</h2>
		<p class="description">
			{description}
		</p>
		<Tags tags={tags} />
		<div class="links">
			<a
				href={projectUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="btn-link btn-link-external small">Check it out</a
			>
			<a
				href={sourceCodeUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="btn-link btn-link-external small">Source Code</a
			>
		</div>
	</div>
</div>

<style>
	.project-card {
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: var(--shadow-card);
		transition:
			transform 0.3s,
			box-shadow 0.3s;
	}

	@media (prefers-color-scheme: dark) {
		.project-card {
			border: 1px solid var(--color-border);
		}
	}

	.project-card:hover {
		box-shadow: var(--shadow-card-hover);
	}

	.project-image {
		width: 100%;
		height: 200px;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s;
	}

	.project-card:hover .project-image img {
		transform: scale(1.05);
	}

	.project-content {
		padding: 1.5rem;
	}

	.project-card h2 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: var(--color-text);
	}

	.description {
		color: var(--color-text-light);
		margin-bottom: 1rem;
		line-height: 1.5;
	}

	.links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}
</style>
