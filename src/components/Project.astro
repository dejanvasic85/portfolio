---
import Tags from './Tags.astro';

interface Props {
	title: string;
	heroStatement: string;
	description: string;
	businessMetrics: string[];
	testimonial?: {
		quote: string;
		author: string;
	} | null;
	tags: string[];
	projectUrl?: string;
	sourceCodeUrl?: string;
	images: {
		desktop: string;
		mobile: string | null;
	};
}

const {
	title,
	heroStatement,
	description,
	businessMetrics,
	testimonial,
	projectUrl,
	sourceCodeUrl,
	tags,
	images
} = Astro.props;
---

<section class="project-section">
	<div class="project-header">
		<h2 class="project-title">{title}</h2>
		<p class="hero-statement">{heroStatement}</p>
	</div>

	{
		images.desktop && (
			<div class="project-screenshots">
				<div class="screenshots-container">
					<img
						src={images.desktop}
						alt={`${title} desktop screenshot`}
						class="screenshot desktop-screenshot"
					/>
					{images.mobile && (
						<img
							src={images.mobile}
							alt={`${title} mobile screenshot`}
							class="screenshot mobile-screenshot"
						/>
					)}
				</div>
			</div>
		)
	}

	<div class="project-main">
		<div class="project-content">
			<div class="project-description">
				<h3>Overview</h3>
				<p>{description}</p>
			</div>

			{
				businessMetrics.length > 0 && (
					<div>
						<h3>Goals</h3>
						<ul class="metrics-list">
							{businessMetrics.map((metric) => (
								<li class="metric-item">{metric}</li>
							))}
						</ul>
					</div>
				)
			}
			<div class="tech-stack">
				<h3>Technology Stack</h3>
				<Tags tags={tags} />
			</div>
		</div>

		{
			testimonial && (
				<div class="testimonial">
					<blockquote class="testimonial-quote">"{testimonial.quote}"</blockquote>
					<cite class="testimonial-author">— {testimonial.author}</cite>
				</div>
			)
		}

		<div class="project-links">
			<a
				href={projectUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="btn-link btn-link-external">View Project</a
			>
			<a
				href={sourceCodeUrl}
				target="_blank"
				rel="noopener noreferrer"
				class="btn-link btn-link-external secondary">Source Code</a
			>
		</div>
	</div>
</section>

<style>
	.project-section {
		width: 100%;
		padding: 2rem;
		border-bottom: none;
		background-color: var(--color-background-alt);
		border-radius: 0.75rem;
		box-shadow:
			0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	.project-section:last-child {
		border-bottom: none;
	}

	.project-header {
		margin-bottom: 2rem;
		text-align: left;
	}

	.project-title {
		font-size: 1.75rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.hero-statement {
		font-size: 1.125rem;
		font-weight: 500;
		max-width: 800px;
		margin: 0;
		line-height: 1.6;
	}

	.project-screenshots {
		margin-bottom: 3rem;
	}

	.screenshots-container {
		position: relative;
		max-width: 800px;
		margin: 0 auto;
	}

	.screenshot {
		border-radius: 8px;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
		transition: transform 0.3s ease;
	}

	.desktop-screenshot {
		width: 100%;
		height: auto;
		display: block;
	}

	.mobile-screenshot {
		display: none;
	}

	.screenshots-container {
		text-align: center;
	}

	.project-main {
		display: grid;
		gap: 2rem;
		align-items: start;
	}

	.project-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.project-content h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
		color: var(--color-text);
		border-bottom: 2px solid var(--color-accent);
		padding-bottom: 0.25rem;
		display: inline-block;
	}

	.project-description p {
		color: var(--color-text-light);
		line-height: 1.6;
		font-size: 1rem;
	}

	.metrics-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.metric-item {
		position: relative;
		padding-left: 1.5rem;
		margin-bottom: 0.5rem;
		color: var(--color-text-light);
		line-height: 1.5;
	}

	.metric-item::before {
		content: '✓';
		position: absolute;
		left: 0;
		color: var(--color-secondary);
		font-weight: bold;
	}

	.testimonial {
		padding: 1.5rem;
		border-left: 4px solid var(--color-accent);
		background-color: var(--color-accent-light);
	}

	.testimonial h3 {
		margin-bottom: 1rem;
	}

	.testimonial-quote {
		font-style: italic;
		font-size: 1rem;
		line-height: 1.6;
		color: var(--color-text-light);
		margin: 0 0 0.75rem 0;
	}

	.testimonial-author {
		font-size: 0.9rem;
		color: var(--color-text);
		font-weight: 500;
	}

	.tech-stack h3 {
		margin-bottom: 1rem;
	}

	.project-links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		margin-top: 1rem;
	}

	.secondary {
		background: transparent;
		color: var(--color-text-light);
		border: 1px solid var(--color-border);
	}

	.secondary:hover {
		background: var(--color-bg-secondary);
		color: var(--color-text);
	}

	@media (min-width: 769px) {
		.project-section {
			padding: 3rem;
		}

		.project-header {
			margin-bottom: 3rem;
		}

		.project-title {
			font-size: 2rem;
		}

		.hero-statement {
			font-size: 1.25rem;
		}

		.desktop-screenshot {
			width: 85%;
		}

		.mobile-screenshot {
			position: absolute;
			top: 30px;
			right: -20px;
			width: 190px;
			margin: 1rem auto 0;
			display: block;
			margin: 0;
			z-index: 2;
		}

		.screenshots-container {
			text-align: left;
		}
	}

	@media (min-width: 1025px) {
		.project-main {
			gap: 4rem;
		}
	}

	@media (prefers-color-scheme: dark) {
		.testimonial {
			background-color: var(--color-accent);
			border-radius: 10px;
		}
	}
</style>
