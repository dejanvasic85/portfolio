---
import Tags from './Tags.astro';

interface Props {
	title: string;
	heroStatement: string;
	description: string;
	businessMetrics: string[];
	testimonial?: {
		quote: string;
		author: string;
	} | null;
	tags: string[];
	projectUrl?: string;
	sourceCodeUrl?: string;
	images: {
		desktop: string;
		mobile: string | null;
	};
}

const {
	title,
	heroStatement,
	description,
	businessMetrics,
	testimonial,
	projectUrl,
	sourceCodeUrl,
	tags,
	images
} = Astro.props;
---

<section class="project-section">
	<div class="project-header">
		<h2 class="project-title">{title}</h2>
		<p class="hero-statement">{heroStatement}</p>
	</div>

	<div class="project-main">
		<div class="project-content">
			<div class="project-description">
				<h3>Overview</h3>
				<p>{description}</p>
			</div>

			<div class="business-metrics">
				<h3>Business Impact</h3>
				<ul class="metrics-list">
					{businessMetrics.map((metric) => <li class="metric-item">{metric}</li>)}
				</ul>
			</div>

			{
				testimonial && (
					<div class="testimonial">
						<h3>Client Testimonial</h3>
						<blockquote class="testimonial-quote">"{testimonial.quote}"</blockquote>
						<cite class="testimonial-author">— {testimonial.author}</cite>
					</div>
				)
			}

			<div class="tech-stack">
				<h3>Technology Stack</h3>
				<Tags tags={tags} />
			</div>

			<div class="project-links">
				<a
					href={projectUrl}
					target="_blank"
					rel="noopener noreferrer"
					class="btn-link btn-link-external">View Project</a
				>
				<a
					href={sourceCodeUrl}
					target="_blank"
					rel="noopener noreferrer"
					class="btn-link btn-link-external secondary">Source Code</a
				>
			</div>
		</div>

		<div class="project-images">
			<div class="image-container desktop-image">
				<img src={images.desktop} alt={`${title} desktop view`} />
			</div>
			{
				images.mobile && (
					<div class="image-container mobile-image">
						<img src={images.mobile} alt={`${title} mobile view`} />
					</div>
				)
			}
		</div>
	</div>
</section>

<style>
	.project-section {
		width: 100%;
		padding: 2rem;
		border-bottom: none;
		background: white;
		border-radius: 0.75rem;
		box-shadow:
			0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -1px rgba(0, 0, 0, 0.06);
	}

	.project-section:last-child {
		border-bottom: none;
	}

	.project-header {
		margin-bottom: 2rem;
		text-align: left;
	}

	.project-title {
		font-size: 1.75rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.hero-statement {
		font-size: 1.125rem;
		font-weight: 500;
		color: var(--color-accent);
		max-width: 800px;
		margin: 0;
		line-height: 1.6;
	}

	.project-main {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		align-items: start;
	}

	.project-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.project-content h3 {
		font-size: 1.25rem;
		font-weight: 600;
		margin-bottom: 0.75rem;
		color: var(--color-text);
		border-bottom: 2px solid var(--color-accent);
		padding-bottom: 0.25rem;
		display: inline-block;
	}

	.project-description p {
		color: var(--color-text-light);
		line-height: 1.6;
		font-size: 1rem;
	}

	.metrics-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.metric-item {
		position: relative;
		padding-left: 1.5rem;
		margin-bottom: 0.5rem;
		color: var(--color-text-light);
		line-height: 1.5;
	}

	.metric-item::before {
		content: '✓';
		position: absolute;
		left: 0;
		color: var(--color-accent);
		font-weight: bold;
	}

	.testimonial {
		background: var(--color-bg-secondary);
		padding: 1.5rem;
		border-radius: 0.5rem;
		border-left: 4px solid var(--color-accent);
	}

	.testimonial h3 {
		margin-bottom: 1rem;
	}

	.testimonial-quote {
		font-style: italic;
		font-size: 1rem;
		line-height: 1.6;
		color: var(--color-text-light);
		margin: 0 0 0.75rem 0;
	}

	.testimonial-author {
		font-size: 0.9rem;
		color: var(--color-text);
		font-weight: 500;
	}

	.tech-stack h3 {
		margin-bottom: 1rem;
	}

	.project-links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		margin-top: 1rem;
	}

	.project-images {
		position: relative;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: center;
		justify-content: center;
		perspective: 1000px;
	}

	.image-container {
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
		transition: transform 0.3s ease;
		max-width: 100%;
	}

	.desktop-image {
		transform: none;
		z-index: 2;
	}

	.mobile-image {
		transform: none;
		margin-left: 0;
		z-index: 1;
	}

	.image-container:hover {
		transform: scale(1.05);
	}

	.image-container img {
		width: 100%;
		height: auto;
		display: block;
	}

	.secondary {
		background: transparent;
		color: var(--color-text-light);
		border: 1px solid var(--color-border);
	}

	.secondary:hover {
		background: var(--color-bg-secondary);
		color: var(--color-text);
	}

	@media (min-width: 769px) {
		.project-section {
			padding: 3rem;
		}

		.project-header {
			margin-bottom: 3rem;
		}

		.project-title {
			font-size: 2rem;
		}

		.hero-statement {
			font-size: 1.25rem;
		}

		.project-images {
			flex-direction: row;
			gap: 2rem;
		}

		.desktop-image {
			max-width: 400px;
		}

		.mobile-image {
			max-width: 200px;
		}
	}

	@media (min-width: 1025px) {
		.project-main {
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
		}

		.project-images {
			order: 0;
			margin-bottom: 0;
		}

		.desktop-image {
			transform: rotateY(-8deg) rotateX(2deg);
		}

		.mobile-image {
			transform: rotateY(12deg) rotateX(-2deg);
			margin-left: -2rem;
		}

		.image-container:hover {
			transform: rotateY(0deg) rotateX(0deg) scale(1.05);
		}
	}
</style>
