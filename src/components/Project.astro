---
import Tags from './Tags.astro';

interface Props {
	title: string;
	description: string;
	tags: string[];
	projectUrl?: string;
	sourceCodeUrl?: string;
}

const { title, description, projectUrl, sourceCodeUrl, tags } = Astro.props;
---

<div class="project-card">
	<div class="project-content">
		<h2>{title}</h2>
		<p class="description">
			{description}
		</p>
		<Tags tags={tags} />
		<div class="links">
			<a href={projectUrl} target="_blank" rel="noopener noreferrer">Check it out</a>
			<a href={sourceCodeUrl} target="_blank" rel="noopener noreferrer">Source Code</a>
		</div>
	</div>
</div>

<style>
	.project-card {
		border-radius: 0.5rem;
		overflow: hidden;
		box-shadow: var(--shadow-card);
		transition:
			transform 0.3s,
			box-shadow 0.3s;
	}

	.project-card:hover {
		box-shadow: var(--shadow-card-hover);
	}

	.project-content {
		padding: 1.5rem;
	}

	.project-card h2 {
		font-size: 1.5rem;
		margin-bottom: 0.75rem;
		color: #333;
	}

	.description {
		color: #555;
		margin-bottom: 1rem;
		line-height: 1.5;
	}

	.links {
		display: flex;
		gap: 1rem;
	}

	.links a {
		color: var(--color-primary);
		text-decoration: none;
	}

	.links a:hover {
		text-decoration: underline;
	}
</style>
