---
interface Props {
	title: string;
	publication: string;
	date: string;
	url: string;
	summary: string;
	image?: string;
}

const { title, publication, date, url, summary, image } = Astro.props;
---

<div class="publication">
	<div class="publication-content">
		<h3><a href={url} target="_blank" rel="noopener noreferrer">{title}</a></h3>
		<div class="publication-meta">
			<span class="publication-name">{publication}</span>
			<span class="publication-date">{date}</span>
		</div>
		<p class="publication-summary">{summary}</p>
	</div>
	{
		image && (
			<div class="publication-image">
				<a href={url} target="_blank" rel="noopener noreferrer">
					<img src={image} alt={title} />
				</a>
			</div>
		)
	}
</div>

<style>
	.publication {
		margin-bottom: 2.5rem;
		display: flex;
		gap: 1.5rem;
		padding: 1.25rem;
		border-radius: 0.5rem;
		background-color: var(--color-bg-primary);
		transition:
			transform 0.2s ease,
			box-shadow 0.2s ease;
		position: relative;
		overflow: hidden;
	}

	.publication:hover {
		transform: translateY(-4px);
		box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
	}

	.publication-content {
		flex: 1;
	}

	.publication h3 {
		font-size: 1.4rem;
		margin-bottom: 0.5rem;
		line-height: 1.3;
	}

	.publication h3 a {
		color: var(--color-primary);
		text-decoration: none;
		position: relative;
	}

	.publication h3 a:hover {
		text-decoration: underline;
	}

	.publication-meta {
		display: flex;
		justify-content: space-between;
		color: var(--color-text-light);
		margin-bottom: 0.75rem;
		font-size: 0.9rem;
	}

	.publication-summary {
		color: var(--color-text);
		line-height: 1.5;
		margin: 0.75rem 0 0;
		opacity: 0.9;
	}

	.publication-image {
		flex: 0 0 220px;
		height: 140px;
		overflow: hidden;
		border-radius: 0.375rem;
	}

	.publication-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.publication:hover .publication-image img {
		transform: scale(1.05);
	}

	@media (max-width: 768px) {
		.publication {
			flex-direction: column;
		}

		.publication-image {
			flex: 0 0 auto;
			height: 180px;
			margin-top: 1rem;
			order: -1;
		}
	}
</style>
